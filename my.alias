#################ALIAS ENV################
git_branch()
{
    branch=`git rev-parse --abbrev-ref HEAD 2>/dev/null`
    if [ "${branch}" != ""  ]; then
        if [ "${branch}" = "(no branch)"  ]; then
            branch="(`git rev-parse --short HEAD`...)"
        fi
                echo "($branch)"
    fi
}
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W$(git_branch)\[\033[00m\]\$ '
export PS1
